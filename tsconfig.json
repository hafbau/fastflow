{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": ["ES2020"],
        "jsx": "react-jsx",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@flowstack/*": ["packages/@flowstack/*/src"],
            "@core/*": ["core/packages/*/src"]
        }
    },
    "exclude": [
        "node_modules",
        "dist",
        "build",
        "coverage",
        ".turbo"
    ]
} 